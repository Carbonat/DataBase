<Window x:Name="addCommenter" x:Class="_0004_wpf.AddCommenter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:_0004_wpf"
        Title="Додати коментатора" Height="86.434" Width="313.167">
    <Window.Resources>
        <local:DefaultValue x:Key="defaultValue"/>
    </Window.Resources>
    <Grid DataContext="{StaticResource defaultValue}">
        <Grid.RowDefinitions>
            <RowDefinition Height="15"/>
            <RowDefinition Height="25"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="15"/>
            <ColumnDefinition Width="75"/>
            <ColumnDefinition Width="15"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="nickName" HorizontalAlignment="Left" TextWrapping="Wrap" Width="185" FontSize="16" Foreground="Gray" Grid.Column="1" Grid.Row="1" GotFocus="nickName_GotFocus" LostFocus="nickName_LostFocus" Text="{Binding DefaultNickName, Mode=OneWay}"/>
        <Button Content="Зберегти" HorizontalAlignment="Left" Width="75" Grid.Column="3" Grid.Row="1"/>

    </Grid>
</Window>
