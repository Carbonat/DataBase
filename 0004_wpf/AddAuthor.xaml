<Window x:Name="AddAuthor1" x:Class="_0004_wpf.AddAuthor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:_0004_wpf"
        Title="Додати автора" Height="90.167" Width="578">
    <Window.Resources>
        <local:DefaultValue x:Key="defaultValue"/>
    </Window.Resources>
    <Grid DataContext="{StaticResource defaultValue}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="241*"/>
            <ColumnDefinition Width="244*"/>
            <ColumnDefinition Width="85"/>

        </Grid.ColumnDefinitions>
        <TextBox x:Name="authorFirstName" Margin="12,17,20,0" TextWrapping="Wrap" FontSize="16" Text ="{Binding DefaultFirstName, Mode=OneWay}" GotFocus="authorFirstName_GotFocus" LostFocus="authorFirstName_LostFocus" Foreground="Gray" Height="25" VerticalAlignment="Top"/>
        <TextBox x:Name="authorSurName" Margin="9,17,9,0" TextWrapping="Wrap" FontSize="16" Text="{Binding DefaultSurName, Mode=OneWay}" GotFocus="authorSecondName_GotFocus" LostFocus="authorSecondName_LostFocus" Grid.Column="1" Foreground="Gray" Height="25" VerticalAlignment="Top"/>
        <Button Grid.Column="2" Margin="5,18,5,0" Content="Зберегти" FontSize="14" Height="23" VerticalAlignment="Top"/>


    </Grid>
</Window>
