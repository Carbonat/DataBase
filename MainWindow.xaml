<Window x:Class="GamesDB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModel="clr-namespace:GamesDB.View_Model"
        Title="MainWindow" Height="350" Width="525">
    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>
    
    <Grid>
        <DataGrid ItemsSource="{Binding Path=GridData, Mode=OneWay}" Margin="10,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="301" Width="460"/>

    </Grid>
</Window>
